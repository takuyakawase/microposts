<%= form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_field :from, placeholder: "出発" %>
    <%= f.text_field :step, placeholder: "経由" %>
    <%= f.text_field :to, placeholder: "到達点" %>
  </div>
  <%= f.submit "検索", class: "btn btn-primary" %>
<% end %>